extends layout
block content
  div.main
    div.projectImg
      img(src= project.imgPath[1])
    div.projectView
      div.projectHead
        h2 #{project.title}
      p #{project.content}
      if project.videoUrl
        div.projectHead
          h2 Video
        .projectVideo
          iframe( src=project.videoUrl frameborder='0' webkitallowfullscreen mozallowfullscreen allowfullscreen )
      if project.imgPath.length > 2
        div.projectHead
          h2 Gallery
        .projectGallery
        - for( var i = 1; i < (project.imgPath.length + 1) ; ++i ) {
          img( src = project.imgPath[i] ).gallery  
        - }
